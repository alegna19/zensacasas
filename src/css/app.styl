h1, h2, h3, h4, h5, h6, div
  font-family 'Baloo 2'
  // font-weight 700
h1, h2, h3, h4, h5, h6
  margin-top 12px
  margin-bottom 12px
  margin-right 12px
p, ul
  font-family 'Dosis', sans-serif
  font-weight 200
  color #000
  font-size 22px
ul
  list-style-type none
a
  text-decoration none
.align-center
  text-align center
.padding
  padding 14px
.show-mobile-only
  display none
.green-bg
  background-color #c4d600
.grey-bg
  background-color #f2f2f2
.opacity-bg
  background-color rgba(0,0,0, 0.3)
.opacity-bg2
  background-color rgba(0,0,0, 0.7)
.hr-custom
  width 60px
  border 1px #c4d600 solid
  margin-left 0
::placeholder
  color #d2d5d9
.flex-container
  display flex
  flex-wrap wrap
  align-items center
  justify-content center
@media (max-width $breakpoint-sm-max)
  .show-mobile-only
    display block
  .hide-mobile-only
    display none

