h1, h2, h3, h4, h5, h6, div
  font-family 'Baloo 2'
  // font-weight 700
h1, h2, h3, h4, h5, h6
  margin-top 12px
  margin-bottom 12px
  margin-right 12px
p, ul
  font-family 'Dosis', sans-serif
  font-size 14px
  font-weight 200
// .text-white span
//   font-family 'Dosis', sans-serif
//   font-size 14px
//   color #fff
//   font-weight 200
ul
  list-style-type none
a
  text-decoration none
.align-center
  text-align center
.padding
  padding 14px
.logo1
  height 120px
  position fixed
  top -4px
  left 40px
  z-index 2
.logo-small
  height 50px
.motto
  padding-left 150px
  font-family 'Bilbo Swash Caps', cursive
  font-weight bolder
  color #fff !important
.show-mobile-only
  display none
.opacity-bg
  background-color rgba(0,0,0, 0.3)
.front-carousel
  height 460px
  top -50px
  margin-bottom -50px
.front-carousel-big
  height 520px
  top -50px
  margin-bottom -50px
.toolbar-solid
  background-color #7ac8a1
.green-bg
  background-color rgba(122, 200, 161, 0.3)
.grey-bg
  background-color #f0f2f1
.logo-small
  height 70px
  transition-duration 1s
button.owl-dot
  outline none
.hr-rtg
  width 60px
  border 1px #e2a51c solid
  margin-left 0
.input-search
  font-size 18px
  width 300px
  margin-top 10px
  margin-bottom 10px
  border 1px #e2a51c solid
  border-radius 4px
  outline none
  padding 6px
::placeholder
  color #d2d5d9
.text-bigger
  font-size 18px
  color #5c5c5c
  font-family Montserrat
.card-image p
  font-family Oswald
  color #e2a51c
  padding 10px
  font-size 16px
.card-image h6
  padding-left 14px
.select-category
  width 300px
.card
  width 90%
  min-height 580px
  border 1px #e2a51c solid
  background-color #fafafa
  border-radius 8px
  box-shadow 0 0 8px 1px #cccccc
  margin-bottom 10px
.card img
  width 100%
  height 300px
.card-title
  border 1px black solid
.card-action
  padding 20px
  border-radius 0 0 8px 8px
.featurez
  color grey
  padding 10px
.flex-container
  display flex
  flex-wrap wrap
  align-items center
  justify-content center
@media (max-width $breakpoint-sm-max)
  .show-mobile-only
    display block
  .hide-mobile-only
    display none
  .logo1
    height 90px
    margin-top 10px
  .motto
    padding-left 90px
  .card-image p
    font-size 12px

